<UserControl x:Class="Blackbox.BoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Blackbox"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="45" d:DesignWidth="45" IsEnabled="True">

    <Grid x:Name="LayoutRoot" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Image Name="image" Stretch="Fill" Height="45" Width="45" />
        <Image Name="imageForeground" Stretch="Fill" Height="45" Width="45" />
        <TextBlock Name="textBlock"
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Margin="4,2,0,0" 
                   Height="14"
                   Width="14" 
                   Text="{Binding Index, Mode=OneWay}" 
                   Foreground="White"
                   FontSize="10"
                   FontFamily="Segoe WP"/>
    </Grid>
</UserControl>
